                    <!--							<image>-->
                    <!--								<name>piomin/${project.artifactId}:${project.version}</name>-->
                    <!--								<builder>paketobuildpacks/builder:full</builder>-->
                    <!--							</image>-->
                    <!--						</configuration>-->
